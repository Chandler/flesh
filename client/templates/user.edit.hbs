{{#if errorMessage}}
  <div class="alert alert-danger">
    {{errorMessage}}
  </div>
{{/if}}
<div class="container-fluid">
  <div class="row create-account-page">
    <div class="col-md-5">
      <form class="form-horizontal" role="form">
        <div class="form-group">
          <label class="col-sm-3 control-label">Email</label>
          <div class="col-sm-5">
            {{ input type="text" placeholder="email" valueBinding="email" }}
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label">Password</label>
          <div class="col-sm-5">
            {{input type="password" placeholder="password" valueBinding="password" }}
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label">First Name</label>
          <div class="col-sm-5">
            {{ input type="text" placeholder="first name" valueBinding="first_name" }}
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label">Last Name</label>
          <div class="col-sm-5">
            {{input type="text" placeholder="last name" valueBinding="last_name" }}
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label">Screen Name</label>
          <div class="col-sm-5">
            {{input type="text" placeholder="screen name" valueBinding="screen_name" }}
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-3 control-label">Phone</label>
          <div class="col-sm-5">
            {{input type="text" placeholder="optional phone number" valueBinding="phone" }}
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <div type="submit" class="btn btn-success" {{action "save"}}>Save</div>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

