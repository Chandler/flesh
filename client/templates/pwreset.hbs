{{#if errors}} <div class="alert alert-danger"> {{errors}} </div> {{/if}}
{{#if success}} <div class="alert alert-success"> {{success}} </div> {{/if}}

<div class="container-fluid">
  <div class="row create-account-page">
    <div class="col-md-5">
      <form class="form-horizontal" role="form">
        <div class="form-group">
          <label class="col-sm-3 control-label">Enter your email</label>
          <div class="col-sm-5">
            {{ input type="text" placeholder="email" valueBinding="email" }}
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <div type="submit" class="btn btn-success" {{action "send"}}>Send password reset link</div>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
