{{#if error}}
  <div class="alert alert-danger"><h1>{{error}}</h1></div>
{{/if}}
{{#if success}}
  <div class="alert alert-success"><h1>{{success}}</h1></div>
{{/if}}
<div class="container-fluid profile-header"> 
  <div class="row">
   <div class="col-md-3">
    <div class="profile-image large-avatar">
      <img class ="large-avatar" src="https://i.imgur.com/gXZP1GKm.jpg"> </img>
    </div>
    <h2 {{name}} </h2>
    <div> {{description}} </div>
      <div class="block-body join-game">
        {{#if session.isAuthenticated}}
          {{#if loggedInPlayer}}
            <div class="btn disabled btn-success btn-lg"> You're in this game </div>
          {{else}}
            <div class="btn btn-success btn-lg" {{action "joinGame"}}> Join game! </div>
          {{/if}}
        {{else}}
          {{#link-to 'login' classNames="btn btn-large btn-success"}} Sign in to join a game {{/link-to}}
        {{/if}}
      </div>
   </div>
  {{#if gameStarted}}
   <div class="col-md-9">
      <div id="chart">
      {{line-chart}}
      </div>
   </div>
  {{/if}}
  </div>
</div>
<div class="container-fluid game-profile-body">
  <div class="row"> 
  <div class="col-md-7">
    <div class="profile-block">
 
    </div>
    <div class="profile-block">
      <div class="block-header event-feed-header">
        <h3 class="text-white m-t-50 m-b-30 m-r-20 text-center">
         Event Feed
        </h3> 
      </div>
      <div class="block-body event-feed-body">
         {{#each event in events}}
           {{event-item event=event}}
         {{/each}} 
      </div>
    </div>
  </div>
  <div class="col-md-5">
    <div class="row">
      <div class="col-md-12 m-b-20"> 
        <div class="profile-block">
          <div class="block-header tag-header">
            <h3 class="text-white m-t-50 m-b-30 m-r-20 text-center"> Tag a Human </h3> 
          </div>
          <div class="block-body tag-body">
            <div class= "col-md-6">
             {{ 
                view Ember.TextField
                type="text"
                placeholder="Human Code"
                valueBinding="code"
             }} 
            </div>
           <div class= "col-md-6">
              <div type="button" class="save-tag-btn btn btn-primary btn-lg " {{action "registerTag"}}>save tag</div>
           </div>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12 m-b-20"> 
        <div class="profile-block">
          <div class="block-header player-list-header">
            <h3 class="text-white m-t-50 m-b-30 m-r-20 text-center"> {{players.length}} Players </h3> 
          </div>
          <div class="block-body player-list-body">
            {{#each player in players}}
              <div class="player-item">
                <div class="player-item-avatar">
                  {{#link-to 'user' player.user}}
                    <img class="medium-avatar" {{bind-attr src=player.user.avatar_url}}></img>
                  {{/link-to}}
                </div>
                <div class="player-item-name">
                  {{player.user.screen_name}}
                </div>
              </div>
            {{/each}}
          </div>
        </div>
      </div>
    </div>
  </div>
 </div>
</div>

