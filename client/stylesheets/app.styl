//profile photos
.large-avatar
  width: 150px
  height: 150px 
  border-radius: 23px 

//used in the player list
.medium-avatar
  width: 70px;
  height: 70px;
  border-radius: 5px;

//text under the avatar for game and user profiles
.profile-header
  font-size: 13px

//text under the avatar on profiles only
.profile-screen-name
  display: inline

//left navigation
.sidebar 
  background-color: #43446D
  font-size: 15px
  ul > li > a
    color: #fff;
  ul > li > a.active 
    background: rgba(66, 139, 202, 0.38)
    color: #fff
  ul > li:hover > a 
    background: #428bca 
    color: #fff 

// all the content on game profiles are made of these blocks
.profile-block
  //the colored title for any block
  margin-top: 20px
  .block-header
    height: 75px
    font-size: 24px
    color: #fff
    padding-top: 6px
  //colors for the various block headers
  .event-feed-header
    background-color: #428bca
  .tag-header
    background-color: #36B838
  .player-list-header
    background-color: rgba(216, 36, 50, 0.74)

  //the content body of any block
  .block-body
    background-color: #F5F2F2
  //details for specific block bodies
  .event-feed-body
    height: 100px
  .player-list-body
    height: auto    
  .tag-body
    height: 100px
    padding-top: 17px
    .form-control
      float: left
      display: block;
      width: 225px;
      height: 66px;
      padding: 11px 11px;
      font-size: 28px;
      line-height: 1.42857143;
      color: #555;
      background-color: #fff;
      background-image: none;
      border: 1px solid #C0B6B6;
    .save-tag-btn
      margin-top: 10px
      margin-left: 66px
      background-color: #98C4E9;
      border-color: #FFFFFF;

//an item in the player list on the game profile page
.player-item
  display: inline-block;
  width: 79px;
  font-size: 11px;
  height: 88px;
  padding: 4px;
  margin: 2px;
  overflow: hidden;
